<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Image</th>
      <th>Name</th>
      <th>Breed</th>
      <th>Age</th>
      <th>Is male</th>
      <th>Size</th>
      <th>Desexed</th>
      <th>Can walk offleash</th>
      <th>Can be petted</th>
      <th>Can walk with other dogs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.user_id %></td>
        <td><%= pet.image %></td>
        <td><%= pet.name %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.age %></td>
        <td><%= pet.is_male %></td>
        <td><%= pet.size %></td>
        <td><%= pet.desexed %></td>
        <td><%= pet.can_walk_offleash %></td>
        <td><%= pet.can_be_petted %></td>
        <td><%= pet.can_walk_with_other_dogs %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

